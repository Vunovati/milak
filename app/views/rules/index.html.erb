<% title "Rules" %>

<table>
  <tr>
    <th>Title</th>
  </tr>
  <% for rule in @rules %>
    <tr>
      <td><%= rule.title %></td>
      <td><%= link_to "Show", rule %></td>
      <td><%= link_to "Edit", edit_rule_path(rule) %></td>
      <td><%= link_to "Destroy", rule, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Rule", new_rule_path %></p>
